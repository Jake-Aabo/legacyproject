<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>RetroTech Solutions - Secure Login Portal</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <!-- Debug endpoint still active at /api/debug/users - REMOVE BEFORE PRODUCTION -->
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <div class="login-panel">
                    <div class="panel panel-primary">
                        <div class="panel-heading">
                            <h3 class="panel-title">
                                <span class="glyphicon glyphicon-lock"></span>
                                RetroTech Solutions Secure Portal
                            </h3>
                        </div>
                        <div class="panel-body">
                            <div class="security-badge">
                                <span class="glyphicon glyphicon-shield"></span>
                                Your connection is secure - Protected by RetroTech Security
                            </div>
                            
                            <% if (typeof error !== 'undefined' && error) { %>
                                <div class="alert alert-danger">
                                    <span class="glyphicon glyphicon-exclamation-sign"></span>
                                    <%= error %>
                                </div>
                            <% } %>
                            
                            <% if (typeof req !== 'undefined' && req.query && req.query.success) { %>
                                <div class="alert alert-success">
                                    <span class="glyphicon glyphicon-ok-sign"></span>
                                    <%= req.query.success %>
                                </div>
                            <% } %>

                            <form method="POST" action="/auth/login" id="loginForm">
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-user"></span>
                                        </span>
                                        <input type="text" class="form-control" id="username" name="username" required>
                                    </div>
                                </div>
                                
                                <div class="form-group">
                                    <label for="password">Password</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <span class="glyphicon glyphicon-lock"></span>
                                        </span>
                                        <input type="password" class="form-control" id="password" name="password" required>
                                    </div>
                                </div>
                                
                                <button type="submit" class="btn btn-primary btn-block">
                                    <span class="glyphicon glyphicon-log-in"></span>
                                    Secure Login
                                </button>
                            </form>
                            
                            <div class="text-center" style="margin-top: 15px;">
                                <a href="/auth/register" class="btn btn-link">Create New Account</a>
                                <span class="separator">|</span>
                                <a href="/reset/reset-password" class="btn btn-link">Forgot Password?</a>
                            </div>
                        </div>
                        
                        <div class="panel-footer text-center">
                            <small class="text-muted">
                                RetroTech Solutions Authentication System v2.3.0<br>
                                Enterprise Security Since 2010
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
    <script src="/js/main.js"></script>
</body>
</html>